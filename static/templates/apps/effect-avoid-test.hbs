<div class="form-group">
    <label>{{localize "IMPMAL.Characteristic"}}</label>
    <div class="form-fields">
        <select name="system.transferData.avoidTest.characteristic">
            {{selectOptions (config "characteristics") selected=system.transferData.avoidTest.characteristic blank=""}}
        </select>
    </div>
</div>
<div class="form-group">
    <label>{{localize "IMPMAL.Skill"}}</label>
    <div class="form-fields">
        <select type="text" name="system.transferData.avoidTest.skill.key" value="{{system.transferData.avoidTest.skill.key}}">
            {{selectOptions (config "skills") selected=system.transferData.avoidTest.skill.key blank=""}}
        </select>
        <input type="text" name="system.transferData.avoidTest.skill.specialisation" value="{{system.transferData.avoidTest.skill.specialisation}}">
        </select>
    </div>
</div>
<div class="form-group">
    <label>{{localize "IMPMAL.Difficulty"}}</label>
    <div class="form-fields">
        <select name="system.transferData.avoidTest.difficulty">
        {{#select system.transferData.avoidTest.difficulty}}
            <option value=""></option>
            {{#each (config "difficulties")}}
                <option value="{{@key}}">{{this.name}} ({{numberFormat this.modifier sign=true}})</option>
            {{/each}}
        {{/select}}
        </select>
    </div>
</div>