    <div>
        <div class="form-group">
            <label>{{localize "IMPMAL.Roll"}}</label>
            <div class="form-fields">
                <input type="number" name="roll" value="{{result.roll}}">
            </div>
        </div>

        <div class="form-group">
            <label>{{localize "IMPMAL.Target"}}</label>
            <div class="form-fields">
                <input type="number" name="target" value="{{result.target}}">
            </div>
        </div>

        <div class="form-group">
            <label>{{localize "IMPMAL.SL"}}</label>
            <div class="form-fields">
                <input type="number" name="SL" value="{{result.SL}}">
            </div>
        </div>

        
        <div class="form-group">
            <label>{{localize "IMPMAL.State"}}</label>
            <div class="form-fields">
                <select name="state">
                    {{#select result.state}}
                        <option value="none">{{localize "IMPMAL.None"}}</option>
                        <option value="adv">{{localize "IMPMAL.Advantage"}}</option>
                        <option value="dis">{{localize "IMPMAL.Disadvantage"}}</option>
                    {{/select}}
                </select>
            </div>
        </div>
    </div>