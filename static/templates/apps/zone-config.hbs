<section class="tab {{tab.cssClass}}" data-group="primary" data-tab="{{tab.id}}">
        <div class="form-group">
            <label for="{{rootId}}-{{basePath}}.barrier">{{localize "IMPMAL.Barrier"}}</label>
            <div class="form-fields">
                <input type="checkbox" name="{{basePath}}.barrier" {{checked traits.barrier}}>
            </div>
        </div>

        <div class="form-group">
            <label for="{{rootId}}-{{basePath}}.cover">{{localize "IMPMAL.Cover"}}</label>
            <div class="form-fields">
                <select name="{{basePath}}.cover">
                    {{selectOptions (config "coverTypes") selected=traits.cover}}
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="{{rootId}}-{{basePath}}.difficultTerrain">{{localize "IMPMAL.DifficultTerrain"}}</label>
            <div class="form-fields">
                <input type="checkbox" name="{{basePath}}.difficultTerrain" {{checked traits.difficultTerrain}}>
            </div>
        </div>

        <div class="form-group">
            <label for="{{rootId}}-{{basePath}}.obscured">{{localize "IMPMAL.Obscured"}}</label>
            <div class="form-fields">
                <select name="{{basePath}}.obscured">
                    {{selectOptions (config "obscuredTypes") selected=traits.obscured}}
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="{{rootId}}-{{basePath}}.hazard">{{localize "IMPMAL.Hazard"}}</label>
            <div class="form-fields">
                <select name="{{basePath}}.hazard">
                        {{selectOptions (config "hazardTypes") selected=traits.hazard}}
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="{{rootId}}-{{basePath}}.light">{{localize "IMPMAL.Light"}}</label>
            <div class="form-fields">
                <select name="{{basePath}}.light">
                        {{selectOptions (config "lightTypes") selected=traits.light}}
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="{{rootId}}-{{basePath}}.warpTouched">{{localize "IMPMAL.WarpTouched"}}</label>
            <div class="form-fields">
                <input type="checkbox" name="{{basePath}}.warpTouched" {{checked traits.warpTouched}}>
            </div>
        </div>
</section>