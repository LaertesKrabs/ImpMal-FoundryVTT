<div class="item-use" >
   <div class="item-header" data-action="expandItem" >
    {{#unless noImage}}
        <img src="{{item.img}}">
    {{/unless}}
        <p>{{item.name}}</p>
   </div>
   <div class="description">
        <div class="description-expander">
            <div class="player">
            {{{enriched.player}}}
            </div>
            <div class="gm-only">
                {{{enriched.gm}}}
            </div>
        </div>
   </div> 
</div>